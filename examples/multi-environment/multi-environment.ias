package "multi-env" version "0.1.0" lang "2.0"

prompt "greeting" {
  content "You are a helpful assistant."
}

skill "search" {
  description "Search"
  input {
    query string required
  }
  output {
    results string
  }
  tool command {
    binary "search-tool"
  }
}

agent "assistant" {
  uses prompt "greeting"
  uses skill "search"
  model "claude-sonnet-4-20250514"
}

environment "dev" {
  agent "assistant" {
    model "claude-haiku-latest"
  }
}

environment "prod" {
  agent "assistant" {
    model "claude-sonnet-4-20250514"
  }
}

deploy "local" target "process" {
  default true
}
