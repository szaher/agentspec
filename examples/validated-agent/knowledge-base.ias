package "knowledge-base" version "1.0.0" lang "3.0"

prompt "knowledge-base-context" {
  content "You have access to the company knowledge base. Use it to provide accurate, up-to-date answers."
}

skill "format-response" {
  description "Format support responses with proper headers and sections"
  input {
    text string required
  }
  output {
    formatted string required
  }
  tool inline {
    language "python"
    code "print(f'Support Response: {input}')"
  }
}
