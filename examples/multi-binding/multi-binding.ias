package "multi-bind" version "0.1.0" lang "2.0"

prompt "system" {
  content "You are a deployable assistant."
}

skill "query" {
  description "Query data"
  input {
    q string required
  }
  output {
    data string
  }
  tool command {
    binary "query-tool"
  }
}

agent "data-bot" {
  uses prompt "system"
  uses skill "query"
  model "claude-sonnet-4-20250514"
}

deploy "local" target "process" {
  default true
}

deploy "compose" target "docker-compose" {
}
