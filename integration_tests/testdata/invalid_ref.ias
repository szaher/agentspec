package "demo" version "0.1.0" lang "2.0"

prompt "greeting" {
  content "Hello world"
}

skill "web-search" {
  description "Search the web"
  input {
    query string required
  }
  output {
    results string
  }
  tool command {
    binary "search-tool"
  }
}

agent "my-agent" {
  uses prompt "greeting"
  uses skill "web-serch"
  model "claude-sonnet-4-20250514"
}

deploy "local" target "process" {
  default true
}
